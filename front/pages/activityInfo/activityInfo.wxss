page {
  background-color: #ededed;
}

.user {
  height: 80rpx;
}

.user image {
  width: 80rpx;
  height: 80rpx;
  float: left;
}

.name {
  float: left;
  line-height: 80rpx;
  padding-left: 15rpx;
  font-size: 35rpx;
}

view {
  width: 750rpx;
  text-align: left;
  padding: 0 10rpx;
  background-color: #fff;
}

.icon {
  width: 750rpx;
}

.icon image {
  width: 350rpx;
  height: 60rpx;
}

.imgs image {
  width: 710rpx;
}

.comment-block {
  margin-top: 10rpx;
}

.comment-title {
  border-bottom: 3rpx solid #989898;
  color: #4d4d4d;
  font-size: 35rpx;
  width: 700rpx;
}

.comment-content {
  padding-left: 100rpx;
}

.comment-bottom {
  font-size: 25rpx;
  color: #5e5e5e;
  padding-right: 30rpx;
  overflow: hidden;
  width: 600rpx;
  padding-left: 100rpx;
}

.date {
  float: left;
}

.delete {
  float: right;
  padding-right: 20rpx;
}

.reply {
  float: right;
}

.comment {
  padding-top: 15rpx;
  border-bottom: 1rpx solid #ededed;
}

.like-count {
  float: right;
}

.content {
  width: 700rpx;
}
